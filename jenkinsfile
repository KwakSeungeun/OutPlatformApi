pipeline {
  agent none
  environment {
    CI = 'true'
  }
  stages {
    agent {
      node {
        label ''
        customWorkspace '/var/git'
      }
    }
    stage('Git') {
      steps {
        checkout scm
      }
    }
    stage('Test') {
      when {
        branch 'develop'
      }
      steps {
        sh 'npm install'
        stash includes: '**', name: 'App'
      }
    }
    stage('Develop') {
      when {
        branch 'develop'
      }
      steps {
        echo 'Develop Environment'
      }
    }
  }
}
pipeline {
  agent none
  stages {
    when {
      branch 'develop'
    }
    agent {
      node {
        label 'develop-stage'
        customWorkspace '/var/git'
      }
    }
    stage('Git') {
      steps {
        checkout scm
      }
    }
    stage('Test') {
      steps {
        sh 'npm install'
        stash includes: '**', name: 'App'
      }
    }
    stage('Develop') {
      steps {
        sh ''
      }
    }
  }
}